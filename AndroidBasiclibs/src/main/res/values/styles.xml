<resources>

    <style name="stfContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="stfProgress">
        <item name="android:layout_width">@dimen/dimen_60</item>
        <item name="android:layout_height">@dimen/dimen_60</item>
    </style>

    <style name="stfImage">
        <item name="android:layout_width">@dimen/dimen_80</item>
        <item name="android:layout_height">@dimen/dimen_80</item>
        <item name="android:tint">@color/stfImageColor</item>
    </style>

    <style name="stfMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_20</item>
        <item name="android:layout_marginRight">@dimen/dimen_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stfButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:text">@string/empty_view_retry</item>
        <item name="android:background">@drawable/shape_empty_view_retry</item>
        <item name="android:textColor">@color/gray_bfbfbf</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <!--加载中对话框-->
    <style name="loadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮在activity上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.6</item><!-- 灰度 -->
        <item name="android:windowContentOverlay">@null</item><!-- 对话框是否有遮盖 -->
        <item name="android:colorBackgroundCacheHint">@null</item><!-- 背景缓存颜色 -->
    </style>

</resources>