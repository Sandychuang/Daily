<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10">

    <!--知乎评论列表item-->

    <!--头像-->
    <com.xfhy.androidbasiclibs.uihelper.widget.CircleImageView
        android:id="@+id/civ_comment_avatar"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@drawable/splash_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--用户昵称-->
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:text="每一天都在混水摸鱼"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/civ_comment_avatar"
        app:layout_constraintTop_toTopOf="@id/civ_comment_avatar"/>

    <!--点赞-->
    <TextView
        android:id="@+id/tv_comment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10"
        android:drawablePadding="@dimen/dimen_5"
        android:drawableStart="@drawable/ic_daily_like"
        android:text="2"
        android:textColor="@color/gray_bfbfbf"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_author"/>

    <!--
        内容
    0dp占满这个区域-->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="start"
        android:lineSpacingMultiplier="1.2"
        android:text="因为在欧洲留学，所以坐过几家航空公司的飞机。汉莎的飞机餐不错，但是票价贵，除非运气好有便宜票，否则一般不坐。阿联酋土豪，第一次回国的时候坐的，吃的不记得了，就记得它每个座椅后面都有个插头可以充电，感觉好高大上，不过11个小时的航程因为转机变成16个，于是就放弃它家了。国航坐的最多，吃的嘛…我们还是来谈谈空姐好了~ 我从国内走都会在包里塞泡面你们造嘛？！吃的时候旁边小伙伴满满的羡慕你们造嘛！(可以要求空姐帮你泡的~"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintEnd_toEndOf="@+id/tv_comment_like"
        app:layout_constraintStart_toStartOf="@+id/tv_author"
        app:layout_constraintTop_toBottomOf="@id/civ_comment_avatar"/>

    <!--时间-->
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="11-16 14:17"
        android:textColor="@color/gray_bfbfbf"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintEnd_toEndOf="@id/tv_content"
        app:layout_constraintStart_toStartOf="@id/tv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content"/>
</android.support.constraint.ConstraintLayout>